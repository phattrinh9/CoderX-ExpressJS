extends ../layouts/common

block content
    h2 Transfer
        if (errors) 
            each error in errors
                .alert.alert-danger=error
    form(action='/transfer/create' method='post' )
        input(type="hidden", name='_csrf', value=csrfToken)
        .form-floating.mb-3
            input#floatingInput.form-control.col-sm-6(type='text' name='account' value=values ? values.account :"")
            label(for='floatingInput') Account
        .form-floating.mb-3
            input#floatingInput.form-control.col-sm-6(type='phone' placeholder='01211111111' name='amount' value=values ? values.amount :"")
            label(for='floatingInput') Amount

        button.btn.btn-outline-success(type='submit') Add
