extends ../layouts/common

block content
    form(method='post')
        h2 Login
        if (errors) 
            each error in errors
                .alert.alert-danger=error
        .form-floating.mb-3
            input#floatingInpYut.form-control.col-sm-6(type='email' placeholder='name@example.com' name='email' value=values ? values.email :"")
            label(for='floatingInput') Email 
        .form-floating.mb-3
            input#floatingInput.form-control.col-sm-6(type='password'  name='password' value=values ? values.password :"")
            label(for='floatingInput') Password
        button.btn.btn-outline-success(type='submit') Login
        
